{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Strapi: develop (inspect)",
      "cwd": "${workspaceFolder}/app",
      "program": "${workspaceFolder}/app/node_modules/strapi/bin/strapi.js",
      "runtimeArgs": ["--inspect=9229"],
      "args": ["develop"],
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Strapi: attach (9229)",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Strapi Admin: Chrome",
      "url": "http://localhost:1337/admin",
      "webRoot": "${workspaceFolder}/app/node_modules/strapi-admin/admin/src",
      "sourceMaps": true
    }
  ]
}
