{
  "kind": "collectionType",
  "collectionName": "establishments",
  "info": {
    "name": "Estabelecimentos",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "component",
      "repeatable": false,
      "component": "general.location",
      "required": true
    },
    "owner": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "establishments"
    },
    "description": {
      "type": "text"
    },
    "openingHours": {
      "type": "string"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false
    },
    "services": {
      "type": "json"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "rejectionReason": {
      "type": "text",
      "required": false
    }
  }
}
